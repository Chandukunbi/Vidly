@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<p>Genre: @Model.Genre.Name</p>
<p>Release Date: @Model.ReleasedDate.ToLongDateString()</p>
<p>Date Added: @Model.AddedDate.ToLongDateString()</p>
<p>Number in Stock: @Model.Stock</p>

